{% macro input(name, value='', type='text', size=20) -%}
    <input type="{{ type }}" name="{{ name }}" value="{{
        value|e }}" size="{{ size }}">
{%- endmacro %}
<!doctype html>
<html lang="en">
<head>
{# Block-tags are defining section which can be replaced by child templates
(using a base template and the Extends-Block) #}
  {% block head %}
  <meta charset="UTF-8" />
  <title>{% if title %}{{title}}{% else %}Default title{% endif %}</title>
  <meta name="description" content="{{ description }}" />
  {% endblock %}
</head>

<body>

<div id="content">
  <p>List of items generated by Jinja2:</p>
  <ul>
  {% for item in favorites %}
    <li>Nummer {{loop.index}} - {{ item }}</li>
  {% endfor %}
  </ul>
  <p>{{ input( 'username' ) }}</p>
  <p>{{ input( 'password', type='password' ) }}</p>

  {% filter upper %}
  This text becomes uppercase
  {% endfilter %}
</div>

</body>
</html>